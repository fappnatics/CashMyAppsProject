<?xml version="1.0" encoding="utf-8"?>
<!-- Este XML dibuja un shape con un gradiente que es utilizado para el separador del NavigationDrawer. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <gradient
        android:startColor="#ffe6bb26"
        android:centerColor="#ff7d5c1f"
        android:endColor="#ffe6bb26"
        android:angle="180"/>

    <corners
        android:radius="10dp" />

    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>