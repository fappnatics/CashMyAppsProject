<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cashmyapps.core.cashmyappsproject.UserInfo"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:rowCount="3"
    android:columnCount="3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Nuevo en CashMyApps?"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ff78002f"
        android:id="@+id/txTitulo"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selecciona una cuenta para registrarte"
        android:textColor="#ff78002f"
        android:id="@+id/txSubtitulo"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_column="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView5"
        android:src="@drawable/cashmyapps_logo"
        android:layout_marginBottom="10dp"
        android:layout_row="1"
        android:layout_column="1"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff78002f"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email: "
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:id="@+id/mail"
            android:paddingBottom="8dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_cuentas"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal" />
        </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cashmyapps.core.cashmyappsproject.UserInfo"
        android:orientation="vertical"

        android:rowCount="3"
        android:background="#ff78002f"
        android:columnCount="3">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="  Regístrame!!  "
            android:id="@+id/btAceptar"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_btn_orange"
            android:layout_gravity="center_horizontal" />
        </LinearLayout>



</LinearLayout>