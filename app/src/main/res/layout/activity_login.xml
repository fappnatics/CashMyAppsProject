<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@layout/fondo_login"
    android:rowCount="3"
    android:columnCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selecciona una cuenta"
        android:layout_marginTop="50dp"
        android:textColor="#ffffa847"
        android:id="@+id/txTituloSelec"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_row="0"
        android:layout_column="1" />


        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_cuentas"
            android:layout_below="@+id/txTituloSelec"
            android:background="@layout/caja_texto"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|bottom" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre (opcional)"
        android:layout_marginTop="25dp"
        android:textColor="#ffffa847"
        android:id="@+id/txNombre"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_row="0"
        android:layout_column="1" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etNombre"
        android:background="@layout/caja_texto"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal|bottom" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Tienes un código de amigo?"
        android:layout_marginTop="20dp"
        android:textColor="#ffffa847"
        android:id="@+id/txTituloAmigo"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_row="0"
        android:layout_column="1" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etAmigo"
        android:background="@layout/caja_texto"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="  Aceptar  "
            android:linksClickable="true"
            android:background="@drawable/custom_btn_orange"
            android:id="@+id/btAceptar"/>

        </LinearLayout>



