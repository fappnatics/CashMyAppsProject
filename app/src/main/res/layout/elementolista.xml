<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="30dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txTitulo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:textStyle="italic"
                android:paddingTop="5dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/txResumen"
                android:layout_width="220dp"
                android:layout_height="75dp"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp">
        <TextView
            android:id="@+id/txt_ppi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:background="@layout/fondo_botones"
            android:text="PPI: 1.02â‚¬"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imgEstrellas"
                    android:layout_width="120dp"
                    android:src="@drawable/tresestrellas"
                    android:layout_gravity="left"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:layout_weight=".50"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Instalar"
                    android:layout_weight=".30"
                    android:visibility="invisible"
                    android:id="@+id/buttonInvisible"/>

                <TextView
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:autoLink="web"
                    android:text="Instalar"
                    android:linksClickable="true"
                    android:layout_weight=".20"
                    android:background="@drawable/custom_btn_orange"
                    android:id="@+id/btInstalar"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">


        </TableRow>


</TableLayout>


 </LinearLayout>
